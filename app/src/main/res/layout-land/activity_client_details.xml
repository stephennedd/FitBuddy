<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_texture_3"
    android:gravity="center_horizontal"
    tools:context=".Activities.ClientDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detailProfileImage"
        android:layout_width="164dp"
        android:layout_height="161dp"
        android:layout_below="@+id/detailName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_texture_3"
        android:elevation="4dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:src="@drawable/blank_profile_picture"
        app:civ_border_color="#272727"
        tools:layout_conversion_absoluteHeight="214dp"
        tools:layout_conversion_absoluteWidth="309dp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/detailName"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-2dp"
        android:fontFamily="@font/comfortaa_light"
        android:gravity="center_horizontal"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.808"
        tools:layout_conversion_absoluteHeight="33dp"
        tools:layout_conversion_absoluteWidth="105dp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="246dp" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="212dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/preWeightID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:layout_conversion_absoluteHeight="31dp"
                tools:layout_conversion_absoluteWidth="60dp"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="279dp"
                tools:text="@string/add_client_weight" />

            <TextView
                android:id="@+id/preHeightID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:layout_conversion_absoluteHeight="31dp"
                tools:layout_conversion_absoluteWidth="60dp"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="340dp"
                tools:text="@string/add_client_height" />

            <TextView
                android:id="@+id/preAgeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="60dp"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="310dp"
                tools:text="@string/add_client_age" />

            <TextView
                android:id="@+id/preStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="italic"
                tools:text="@string/update_client_status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#6C5614"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="31dp"
                tools:layout_conversion_absoluteWidth="40dp"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="279dp"
                tools:text="@string/add_client_weight" />

            <TextView
                android:id="@+id/detailHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="@string/add_client_height"
                android:textAlignment="center"
                android:textColor="#6C5614"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#6C5614"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="31dp"
                tools:layout_conversion_absoluteWidth="40dp"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="310dp"
                tools:text="@string/add_client_age" />

            <TextView
                android:id="@+id/detailStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:textAlignment="center"
                android:textColor="#6C5614"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="484dp"
        android:layout_height="303dp"
        android:layout_below="@+id/LinearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="-240dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="64dp"
        android:layout_toEndOf="@+id/detailProfileImage"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="480dp"
            android:layout_height="41dp"
            android:fontFamily="@font/comfortaa_light"
            android:paddingLeft="5dp"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:text="@string/Workouts"
            android:textColor="#F44336"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/workoutList"
            android:layout_width="480dp"
            android:layout_height="340dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:cacheColorHint="#FFFFFF">

        </ListView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/gray"
        android:src="@android:drawable/ic_input_add"
        app:borderWidth="0dp" />

    <Button
        android:id="@+id/clientEditButton"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edit" />

</RelativeLayout>